      <form action="/edit?_method=PUT" method="POST">
        <div class="form-group">
          <label>할 일</label>
          <input
            type="text"
            name="id"
            style="display: none"
            value="<%= post._id %>"
          />
          <input
            type="text"
            class="form-control title"
            name="title"
            value="<%= post.title %>"
          />
        </div>
        <div class="form-group">
          <label>Due Date</label>
          <input
            type="text"
            class="form-control date"
            name="date"
            value="<%= post.date %>"
          />
        </div>
        <button type="submit" class="btn btn-outline-primary update">
          Update
        </button>
      </form>
    </div>
